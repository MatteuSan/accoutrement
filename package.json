{
  "name": "accoutrement",
  "title": "Accoutrement",
  "version": "3.0.1",
  "description": "Sass design-systems management and utilities.",
  "homepage": "https://www.oddbird.net/accoutrement/",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/oddbird/accoutrement.git"
  },
  "author": "Miriam Suzanne <miriam@oddbird.net>",
  "license": "MIT",
  "keywords": [
    "sass",
    "accoutrement",
    "toolkit",
    "design systems",
    "eyeglass-module"
  ],
  "eyeglass": {
    "sassDir": "sass",
    "exports": false,
    "name": "accoutrement",
    "needs": "^1.0.0"
  },
  "scripts": {
    "test": "mocha",
    "lint": "stylelint '**/*.scss' --fix",
    "docs": "sassdoc ./sass",
    "commit": "yarn test && yarn lint && yarn docs",
    "watch:sass": "chokidar '**/*.scss' -c yarn lint",
    "watch:tests": "chokidar './test/**' -c yarn test",
    "watch:docs": "chokidar '**/*.scss' -c yarn docs"
  },
  "bugs": {
    "url": "https://github.com/oddbird/accoutrement/issues"
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "mocha": "^9.1.3",
    "sass": "^1.44.0",
    "sass-true": "^6.0.1",
    "sassdoc": "^2.7.3",
    "sassdoc-theme-herman": "^4.0.2",
    "stylelint": "^14.1.0",
    "stylelint-config-recommended-scss": "^5.0.2",
    "stylelint-scss": "^4.0.0"
  }
}
